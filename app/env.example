# Environment variables for the application
# IMPORTANT: Never commit the actual .env file to version control!

# Database connection string
# For production, use a secure connection string with proper credentials
DATABASE_URL="prisma+postgres://localhost:51213/?api_key=YOUR_API_KEY_HERE"

# Node environment (development, production, test)
NODE_ENV="development"

# Session/Cookie Configuration
# In production with HTTPS, cookies will automatically use secure flag
# Make sure your production environment has HTTPS enabled

# Optional: Add additional security configurations
# SESSION_SECRET="your-super-secret-session-key-here-change-this"
# ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
